RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# For cPanel Node.js - Don't proxy API calls, let Node.js handle them directly
# Since your app is running on the main domain, API calls should go directly to Node.js

# Serve static files directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Frontend routes - serve HTML files
RewriteRule ^renewal/?$ /renewal.html [L]
RewriteRule ^success/?$ /success.html [L]
RewriteRule ^/?$ /index.html [L]

# Security Headers
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# CORS for API
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, x-api-key"

# Cache control
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=3600, must-revalidate"
</FilesMatch>

# Allow access to test pages
<Files "test-callback.html">
    Order Allow,Deny
    Allow from all
</Files>

<Files "api-test.html">
    Order Allow,Deny
    Allow from all
</Files>

<Files "test-php.php">
    Order Allow,Deny
    Allow from all
</Files>

# Redirect test pages to actual files
RewriteRule ^test-callback$ /test-callback.html [L]
RewriteRule ^api-test$ /api-test.html [L]
RewriteRule ^php-test$ /test-php.php [L]