# Update the .htaccess file content
Set-Content -Path ".htaccess" -Value @"
RewriteEngine On

# Redirect root to index.html
RewriteRule ^$ /index.html [L]

# Allow direct access to static files (CSS, JS, images)
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^ - [L]

# Redirect all other requests to index.html (for SPA routing)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]
"@